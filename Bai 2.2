#include<iostream>
#include<math.h>
using namespace std;

int main()
{
	double a, b, c, delta;
	cout << "Nhap lan luot a,b,c: " << endl;
	cin >> a >> b >> c;

	// Truong hop a = 0
	if (a == 0)
	{
		if (b != 0 && c != 0)
		{
			cout << "Phuong trinh co nghiem: " << -c / b;
		}
		else if (b == 0 && c != 0)
		{
			cout << "Phuong trinh vo nghiem";
		}
		else
		{
			cout << "Phuong trinh co vo so nghiem";
		}
	}
	else
	{
		delta = b * b - 4 * a * c;
		double x1, x2;
		if (delta == 0)
		{
			cout << "Phuong trinh co nghiem kep: " << -b / (2 * a);
		}
		else if (delta > 0)
		{
			x1 = (-b + sqrt(delta) / (2 * a));
			x2 = (-b - sqrt(delta) / (2 * a));
			cout << "Phuong trinh co hai nghiem phan biet x1 = " << x1 << " , x2 = " << x2;
		}
		else
		{
			cout << "Phuong trinh vo nghiem";
		}
	}

	return 0;
}

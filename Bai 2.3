#include<iostream>
#include<math.h>
using namespace std;

int main()
{
	float x, sum = 0; int n;
	cout << "Nhap x: "; cin >> x;
	cout << "Nhap n: "; cin >> n;
	if (n % 2 != 0)
	{
		sum = 0;
	}
	else
	{
		for (int i = 2; i <= n; i++)
		{
			sum = sum + (1.0 * pow(x, i) / (1.0 * pow(3, i - 1)));
		}
		sum += (2016 * x);
	}
	cout << sum;
}

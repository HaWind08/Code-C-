#include<iostream>
#include<math.h>
using namespace std;

bool nt(int n)
{
	if (n <= 1) return false;
	for (int i = 2; i <= sqrt(n); i++)
	{
		if (n % i == 0)
		{
			return false;
		}
	}
	return true;
}
int main()
{
	int n;
	cout << "Nhap n: "; cin >> n;

	int Tong = 0, Dem = 0;

	for (int i = 1; i <= n; i++)
	{
		if (nt(i))
		{
			Tong += i;
			Dem++;
		}
	}
	cout << "Tong cac so nguyen to: " << Tong << endl;
	cout << "Co " << Dem << " so nguyen to" << endl;

	return 0;
}

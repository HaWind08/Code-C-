#include<iostream>
using namespace std;

int main()
{
	double SoTien;
	cout << "So tien phai tra: ";
	cin >> SoTien;

	double KM = 0;
	if (SoTien >= 200 && SoTien < 300)
	{
		KM = SoTien * 0.2;
	}
	else if (SoTien >= 300)
	{
		KM = SoTien * 0.3;
	}
	else
	{
		KM = 0;
	}
	cout << "So tien khuyen mai: " << KM;
	return 0;
}
